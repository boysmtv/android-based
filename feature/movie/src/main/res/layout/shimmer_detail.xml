<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shimmer_detail_image"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="#696B6D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearance.Image.Movie" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_detail_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_detail_image">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shimmer_detail_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#696B6D"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/ShapeAppearance.Image.Movie" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shimmer_detail_rule"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/dp_16"
                android:background="#696B6D"
                app:layout_constraintTop_toBottomOf="@+id/shimmer_detail_title"
                app:shapeAppearance="@style/ShapeAppearance.Image.Movie" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shimmer_detail_download"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/dp_16"
                android:background="#696B6D"
                app:layout_constraintTop_toBottomOf="@+id/shimmer_detail_rule"
                app:shapeAppearance="@style/ShapeAppearance.Image.Movie" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shimmer_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/dp_16"
                android:background="#696B6D"
                android:fontFamily="@font/tt_interphases_regular"
                android:lineSpacingExtra="5dp"
                android:textAlignment="gravity"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmer_detail_download"
                app:shapeAppearance="@style/ShapeAppearance.Image.Movie" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shimmer_detail_tab"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_16"
                android:background="#696B6D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmer_detail_desc"
                app:shapeAppearance="@style/ShapeAppearance.Image.Movie" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_8"
                android:background="#696B6D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shimmer_detail_tab"
                app:shapeAppearance="@style/ShapeAppearance.Image.Movie" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>