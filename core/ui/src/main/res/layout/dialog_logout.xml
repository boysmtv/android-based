<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context=".dialog.common.DialogLogout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_32"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_24">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_dialog_three_action_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tt_interphases_regular"
                android:textColor="@color/colorBlackTitleDialogLogout"
                android:gravity="center"
                android:textSize="@dimen/sp_20" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_dialog_three_action_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:textColor="@color/colorGreyDescDialogLogout" />

            <RelativeLayout
                android:id="@+id/rl_dialog_three_action_primary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded_top"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_dialog_three_action_primary_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_dialog_three_action_primary_button_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/tt_interphases_regular"
                    android:textAlignment="center"
                    android:paddingVertical="@dimen/dp_16"
                    android:textColor="@color/colorBluePrimaryButtonLabelDialogLogout"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_dialog_three_action_secondary_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_rounded_top"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_dialog_three_action_secondary_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_dialog_three_action_secondary_button_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:fontFamily="@font/tt_interphases_regular"
                    android:paddingVertical="@dimen/dp_16"
                    android:textColor="@color/colorBlueSecondaryButtonLabelDialogLogout"
                    android:textSize="@dimen/sp_16" />

            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_dialog_three_action_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/tt_interphases_regular"
                android:textColor="@color/colorBlueBackButtonLabelDialogLogout"
                android:layout_marginTop="@dimen/dp_24"
                android:text="Logout"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>